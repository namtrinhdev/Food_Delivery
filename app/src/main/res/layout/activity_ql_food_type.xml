<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QLFoodTypeActivity">
    <ImageView
        android:id="@+id/img_backpress_ql_foodType"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/back_shape"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_backarrow"
        android:rotation="45"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/zz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý loại món"
        android:textColor="@color/text_normal"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycle_ql_foodType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zz"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:paddingVertical="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/id_floatingbtn_add_ql_foodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:contentDescription="d"/>
</RelativeLayout>