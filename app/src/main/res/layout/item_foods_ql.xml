<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/nonused_ID_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_item_ql_food"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_namefood_ql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:layout_toLeftOf="@+id/img_item_delete_food"
            android:text="Bánh mì kẹp xúc xích"
            android:textSize="25sp"
            android:fontFamily="@font/font1_semibold"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_red"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_item_price_ql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_item_delete_food"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:layout_below="@+id/tv_item_namefood_ql"
            android:text="25000"
            android:textSize="24sp"
            android:fontFamily="@font/font1_semibold"
            android:textColor="@color/bg_red"
            android:paddingLeft="20dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tv_item_quantity_ql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_price_ql"
            android:textAlignment="center"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_item_delete_food"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete_24"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>