<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_avatar_item_ql_foodType"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_name_item_ql_foodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_avatar_item_ql_foodType"
            android:layout_toLeftOf="@+id/img_delete_item_ql_foodType"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:fontFamily="@font/font1_semibold"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_delete_item_ql_foodType"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_delete_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>