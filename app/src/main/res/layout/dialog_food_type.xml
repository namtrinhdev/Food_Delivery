<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title_dialog_foodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Sửa loại món"
        android:textAlignment="center"
        android:textColor="@color/text_normal"
        android:layout_marginBottom="15dp"
        android:textSize="22sp" />
    <LinearLayout
        android:id="@+id/btn_pick_img_foodType_dialog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_img_foodType_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn icon loại"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:id="@+id/ed_name_foodType_dialog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:hint="Tên loại"
        android:inputType="text" />
    <Button
        android:id="@+id/btn_save_foodType_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu thay đổi"
        android:textAllCaps="false"
        android:background="@drawable/button_custom_1"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>