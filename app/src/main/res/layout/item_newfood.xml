<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="225dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_item_food">
        <androidx.cardview.widget.CardView
            android:id="@+id/zzzz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="1.5dp">
            <ImageView
                android:id="@+id/img_item_newfood"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_item_namefood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zzzz"
            android:textAlignment="center"
            android:text="TÊN MÓN"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_normal"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_item_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_namefood"
            android:textAlignment="center"
            android:text="Số tiền"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_2"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vitri"
            android:layout_below="@+id/tv_item_money"
            android:layout_toLeftOf="@+id/tv_item_distance"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_money"
            android:layout_centerHorizontal="true"
            android:text="30 Km"
            android:textSize="17sp"
            android:textColor="@color/text_1"
            android:layout_marginTop="3dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>