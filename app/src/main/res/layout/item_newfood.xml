<!--            android:textColor="@color/text_1"-->
<!--            android:drawableLeft="@drawable/ic_vitri"-->
<!--            android:layout_marginTop="3dp"-->
<!--            />-->
    </RelativeLayout>
</androidx.cardview.widget.CardView>