<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/nonused_ID_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_item_cart"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_namefood_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:text="Bánh mì kẹp xúc xích"
            android:textSize="25sp"
            android:fontFamily="@font/font1_semibold"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_red"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/tv_item_price_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:layout_below="@+id/tv_item_namefood_cart"
            android:text="25000"
            android:textSize="24sp"
            android:fontFamily="@font/font1_semibold"
            android:textColor="@color/bg_red"
            android:paddingLeft="25dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/img_item_plus_cart"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_diamon_red"
            android:src="@drawable/baseline_add_24"
            android:layout_toRightOf="@+id/tv_item_quantity_cart"
            android:layout_below="@id/tv_item_price_cart"
            android:rotation="45"
            android:padding="4dp"
            />
        <TextView
            android:id="@+id/tv_item_quantity_cart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_price_cart"
            android:textAlignment="center"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/bg_red"
            android:layout_toRightOf="@+id/img_item_remove_cart"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_item_remove_cart"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_diamon_red"
            android:src="@drawable/baseline_remove_24"
            android:layout_below="@id/tv_item_price_cart"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:rotation="45"
            android:padding="4dp"
            android:layout_marginStart="25dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>