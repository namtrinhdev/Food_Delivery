<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CartFragment"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/zzzzzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart"
        android:textColor="@color/text_normal"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zzzzzz"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/zzzzzzz"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/zzzzzzz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="35dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total price"
                android:textColor="@color/text_normal"
                android:textSize="12sp"
                android:layout_above="@+id/tv_price_cart"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:id="@+id/nonused_ID_001"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic__money"/>
            <TextView
                android:id="@+id/tv_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Ä‘"
                android:textStyle="bold"
                android:textColor="@color/text_normal"
                android:textSize="25sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_toRightOf="@+id/nonused_ID_001"
                />
            <Button
                android:id="@+id/btn_placeoder"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Place Order"
                android:textAllCaps="false"
                android:background="@drawable/button_custom_1"
                android:textStyle="normal"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>